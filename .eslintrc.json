{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "require-jsdoc" : 0,
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error",
      "max-len": ["error", { "ignoreTemplateLiterals": true }]
    }
}
